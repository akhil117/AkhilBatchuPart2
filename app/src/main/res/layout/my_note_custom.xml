<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profileRightMargin"
                android:layout_marginLeft="@dimen/profileEndMargin"
                android:layout_marginTop="@dimen/profileTopMargin"
                android:textColor="@color/pinkcolor"
                android:textSize="@dimen/notesTitleTextSize"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/smallMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notesTitle"
                android:layout_marginStart="@dimen/profileEndMargin"
                android:layout_marginLeft="@dimen/profileEndMargin"
                android:layout_marginTop="@dimen/profileTopMargin"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/textSizeDescription"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_below="@+id/smallMessage"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/_8942"
                android:textColor="#000"
                android:textSize="25sp" />

            <net.igenius.customcheckbox.CustomCheckBox
                android:id="@+id/customCheckBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/smallMessage"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
